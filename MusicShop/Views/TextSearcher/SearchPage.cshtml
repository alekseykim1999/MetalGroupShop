@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search Page</title>
    <link href="~/css/one_album_style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/text_searcher.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="header_block">
        <br />
        <h1 class="text_header">
            Text Scanning
        </h1>
    </div>

    <div class="main_block">
       
            <img id="output" class="photo_reader"/>
   
        <div class="image_input_form">
            @using (Html.BeginForm("ScanPicture", "TextSearcher"))
            {
                <h3 class="text_form">Set Image</h3>
                <br />
                <label class="button_one">
                    <input type="file" name="_file" onchange="loadFile(event)" />
                    Set source to the image
                </label>
                <br />
                <label class="button_two">
                    <input type="submit" />
                    Send
                </label>
            }
        </div>
    </div>
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
</body>
</html>

